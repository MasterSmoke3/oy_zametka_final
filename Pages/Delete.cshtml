@page "{id:int}"
@model ZametkiApp.Pages.DeleteModel
@{
    ViewData["Title"] = "Удаление заметки";
}

<h2>Вы уверены, что хотите удалить эту заметку?</h2>

<div class="mb-3">
    <strong>Название:</strong> @Model.Note.Title
</div>
<div class="mb-3">
    <strong>Описание:</strong> @Model.Note.Description
</div>

<form method="post">
    <button type="submit" class="btn btn-danger">Удалить</button>
    <a asp-page="/Index" class="btn btn-secondary">Отмена</a>
</form>
